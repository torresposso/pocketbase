{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 3,
    "healthcheck": {
      "path": "/api/health",
      "interval": 30,
      "timeout": 10,
      "startPeriod": 10
    }
  }
}
